@model List<SampleMVCApp.Models.LoanApp>


<h1>List of Applicants With ELigibility</h1>
<hr />
<div>
    @if (Model.Count > 0)
    {
        <table border="1">
            <tr>
                <th>EntryId</th>
                <th>Name</th>
                <th>Contact Address</th>
                <th>Amount Of Loan</th>
                <th>Loan Type</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Applicant</td>
                    <td>@item.Address</td>
                    <td>@item.AmountOfLoan</td>
                    <td>@item.Type</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Eligible Applications Found</p>
    }
</div>