
@model SampleMVCApp.Models.LoanApp
@{
    ViewData["Title"] = "OnEdit";
}
@using (Html.BeginForm())
{
    <div>
        <h2>Details of the loan for Mr.@Model.Applicant</h2>
        <hr />
        <p>Loan Amount: @Model.AmountOfLoan</p>
        <p>Loan Type: @Model.Type</p>
        <p>
            Applicants's Address:@Model.Address
        </p>
        <p>Eligibilty: @Html.CheckBoxFor(m=>m.Eligibility);</p>
        <p>
            Reason for Rejection:
            @Html.EditorFor(m=>m.FailureDescription)
        </p>
        <button>Save Changes</button>
    </div>
    if (ViewBag.Message != null)
    {
        <p style="color: red">@ViewBag.Message</p>
    }
}
<h2>OnEdit</h2>

